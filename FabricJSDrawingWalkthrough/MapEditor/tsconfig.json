    "Components/Tools/OvalComponent.ts",
    "Components/Tools/PolylineComponent.ts",
    "Components/Tools/RectComponent.ts",
    "Components/Tools/RedoComponent.ts",
    "Components/Tools/UndoComponent.ts",
    "Components/Tools/TextComponent.ts",
